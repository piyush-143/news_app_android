<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="50dp">

            <!-- Header (Discover) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News from around the world"
                    android:textColor="@color/grey_text"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <!-- Categories -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="19dp"
                android:clipToPadding="false"
                android:layout_marginBottom="24dp"/>

            <!-- FEATURED SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <!-- Section Header with See All -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Featured"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>
                    <TextView
                        android:id="@+id/btn_see_all_featured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="See all"
                        android:textColor="@color/indigo_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/content_featured"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewPagerFeatured"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"/>
                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dotsIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            app:dotsColor="#E0E0E0"
                            app:dotsCornerRadius="8dp"
                            app:dotsSize="10dp"
                            app:dotsSpacing="4dp"
                            app:dotsWidthFactor="2.5"
                            app:selectedDotColor="@color/indigo_primary" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/loader_featured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/indigo_primary"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/error_featured"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/bg_error_container">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_dialog_alert"
                            app:tint="@android:color/holo_red_dark"
                            android:layout_marginBottom="12dp"/>
                        <TextView
                            android:id="@+id/tv_error_featured"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Failed to load"
                            android:textColor="@android:color/holo_red_dark"/>
                        <Button
                            android:id="@+id/btn_retry_featured"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retry"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@android:color/holo_red_dark"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- RECENT SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/tvRecentHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent News"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>
                    <TextView
                        android:id="@+id/btn_see_all_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="See all"
                        android:textColor="@color/indigo_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_recent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                    <ProgressBar
                        android:id="@+id/loader_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:indeterminateTint="@color/indigo_primary"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/error_recent"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/bg_error_container">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_dialog_alert"
                            app:tint="@android:color/holo_red_dark"
                            android:layout_marginBottom="12dp"/>
                        <TextView
                            android:id="@+id/tv_error_recent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error loading news"
                            android:textColor="@android:color/holo_red_dark"/>
                        <Button
                            android:id="@+id/btn_retry_recent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retry"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@android:color/holo_red_dark"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- NATION SECTION -->
            <LinearLayout
                android:id="@+id/layoutNation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nation News"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>
                    <TextView
                        android:id="@+id/btn_see_all_nation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="See all"
                        android:textColor="@color/indigo_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_nation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                    <ProgressBar
                        android:id="@+id/loader_nation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:indeterminateTint="@color/indigo_primary"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/error_nation"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/bg_error_container">
                        <TextView
                            android:id="@+id/tv_error_nation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error"
                            android:textColor="@android:color/holo_red_dark"/>
                        <Button
                            android:id="@+id/btn_retry_nation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retry"
                            android:backgroundTint="@android:color/holo_red_dark"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- WORLD SECTION -->
            <LinearLayout
                android:id="@+id/layoutWorld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:layout_marginTop="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="World News"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>
                    <TextView
                        android:id="@+id/btn_see_all_world"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="See all"
                        android:textColor="@color/indigo_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_world"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                    <ProgressBar
                        android:id="@+id/loader_world"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:indeterminateTint="@color/indigo_primary"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/error_world"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/bg_error_container">
                        <TextView
                            android:id="@+id/tv_error_world"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error"
                            android:textColor="@android:color/holo_red_dark"/>
                        <Button
                            android:id="@+id/btn_retry_world"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retry"
                            android:backgroundTint="@android:color/holo_red_dark"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>